@model List<abhinav_core.Models.logmodalClass>


@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = "Show Page";
}
<span style="color:red;">Welcome -</span>
<span style="color:#ff6a00">@HttpContextAccessor.HttpContext.Session.GetString("Name")</span>

<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>City</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>@item.Pass</td>
            <td><a asp-action="edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
<a href="@Url.Action("Add","Home")" class="btn btn-success">AddNew</a>

<a href="@Url.Action("Logout","Home")" class="btn btn-danger">LOG-OUT</a>